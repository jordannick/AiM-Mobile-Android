<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="#D3D7DD"
    >


    <LinearLayout
        android:id="@+id/row_dateSection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#555555"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/row_dayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Fri"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/row_monthDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="6/27"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="2dp" />
        <TextView
            android:id="@+id/row_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2014"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:padding="2dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/row_priorityCodeSection"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="#E74C3C"
        android:text="E"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="8dp"
        />


    <TextView
        android:id="@+id/row_newIndicator"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_toLeftOf="@id/row_dateSection"
        android:gravity="center_vertical"
        android:textColor="#008000"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        />


    <TextView
        android:id="@+id/row_buildingTextView"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:layout_toRightOf="@id/row_priorityCodeSection"
        android:layout_toLeftOf="@id/row_newIndicator"
        android:text="Beth Ray Center"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Service Calls"
        android:id="@+id/row_category"
        android:layout_below="@+id/row_buildingTextView"
        android:layout_toRightOf="@+id/row_priorityCodeSection"
        android:layout_toEndOf="@+id/row_priorityCodeSection"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textSize="16dp"
        android:textColor="#555555"/>
    <TextView
        android:id="@+id/row_proposal"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="136732-001"
        android:layout_below="@id/row_category"
        android:layout_toRightOf="@id/row_priorityCodeSection"
        android:textColor="#555555"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/row_workCode"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Security"
        android:textColor="#555555"
        android:layout_toLeftOf="@id/row_dateSection"
        android:layout_below="@id/row_newIndicator"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
         />
    <TextView
        android:id="@+id/row_daysAgo"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="4 hours ago"
        android:textColor="#555555"
        android:layout_toLeftOf="@id/row_dateSection"
        android:layout_below="@id/row_workCode"
        android:gravity="center_vertical"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingBottom="8dp"/>


</RelativeLayout>
