<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"

    >

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="true"
    >

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_margin="6dp"
        >

        <LinearLayout
            android:id="@+id/actionRow_topHalfLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_proposal"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="136732-001"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#385e86"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="0dp"/>
            <LinearLayout
                android:id="@+id/actionRow_dateLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="end"
                >
                <TextView
                    android:id="@+id/row_dayOfWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:layout_gravity="center"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textSize="16sp"
                    android:paddingRight="8dp"
                    />

                <TextView
                    android:id="@+id/row_monthDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/27/14"
                    android:layout_gravity="center"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textSize="16sp"
                    android:paddingRight="4dp"/>
                <!--            <TextView
                                android:id="@+id/row_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="2014"
                                android:textSize="10sp"
                                android:layout_gravity="center"
                                android:textColor="@color/overviewCard_workOrderNum"
                                android:padding="2dp"/>-->
            </LinearLayout>
        </LinearLayout>

        <!--android:textColor="@color/overviewCard_workOrderNum"-->


        <LinearLayout
            android:id="@+id/row_dateSection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/actionRow_topHalfLayout"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/actionRow_valueAgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textSize="18sp"
                    android:layout_toLeftOf="@id/row_dateSection"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/actionRow_stringAgo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hours ago"
                    android:textColor="@android:color/tertiary_text_light"
                    android:textSize="10sp"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/row_description"
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:layout_below="@id/actionRow_topHalfLayout"
            android:layout_toLeftOf="@id/row_dateSection"
            android:text="LANDSCAPE COMPOSTING SHED FOR THE MULTI-ANIMAL TEACHING FACILITY - PLANS REVIEW"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="0dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/secondary_text_light"/>





    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>