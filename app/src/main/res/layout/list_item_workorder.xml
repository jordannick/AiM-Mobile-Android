<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    >

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="true"
    >

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="109dp"
        android:layout_margin="6dp"
                    >



        <LinearLayout
            android:id="@+id/row_dateSection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp">

            <TextView
                android:id="@+id/row_dayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Fri"
                android:textStyle="bold"
                android:textColor="@color/overviewCard_workOrderNum"
                android:textSize="22sp"
                android:padding="2dp"
                />

            <TextView
                android:id="@+id/row_monthDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="6/27"
                android:textStyle="bold"
                android:textColor="@color/overviewCard_workOrderNum"
                android:textSize="18sp"
                android:padding="2dp" />
            <TextView
                android:id="@+id/row_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="2014"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/overviewCard_workOrderNum"
                android:padding="2dp"/>

            <View
                android:id="@+id/row_priorityStrip"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="#FFFF00"
                />
        </LinearLayout>



        <TextView
            android:id="@+id/row_newIndicator"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_toLeftOf="@id/row_dateSection"
            android:gravity="center_vertical"
            android:textColor="#008000"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="8dp"
            />

        <TextView
            android:id="@+id/row_proposal"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="136732-001"
            android:layout_alignParentTop="true"
            android:textColor="@color/overviewCard_workOrderNum"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="0dp"/>

        <TextView
            android:id="@+id/row_description"
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:layout_below="@id/row_proposal"
            android:layout_toLeftOf="@id/row_dateSection"
            android:text="LANDSCAPE COMPOSTING SHED FOR THE MULTI-ANIMAL TEACHING FACILITY - PLANS REVIEW"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="0dp"
            android:paddingBottom="4dp"
            android:textColor="#555555"/>



        <TextView
            android:id="@+id/row_daysAgo"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="4 hours ago"
            android:textStyle="bold"
            android:textColor="@color/overviewCard_workOrderNum"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/row_dateSection"
            android:gravity="center_vertical"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingBottom="0dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>