<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/actionList_relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/cardView_layoutBackground">
    <RelativeLayout
        android:id="@+id/total_hours_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            >
            <TextView
                android:id="@+id/synced_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="4dp"
                android:textColor="@color/routine_green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synced"
                android:paddingRight="8dp"
                android:textColor="@color/routine_green"/>

            <TextView
                android:id="@+id/unsynced_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:paddingRight="4dp"
                android:textColor="@color/emergency_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unsynced"
                android:textColor="@color/emergency_red"/>
        </LinearLayout>



        <TextView
            android:id="@+id/hours_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:text="h"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/total_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingRight="2dp"
            android:layout_toLeftOf="@id/hours_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/total_hours"
            android:textColor="#555555"
            android:text="Total:"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:gravity="bottom"/>

    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_below="@id/total_hours_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

    <TextView android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Actions Added"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@android:color/tertiary_text_light" />

    <LinearLayout
        android:id="@+id/actionList_recentlyViewedBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/actionQueue_recentlyViewedTitleBackground"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/actionList_recentBarIconL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/actionQueue_recentlyViewedTitleText"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Recently Viewed"
            android:layout_weight="2"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/actionQueue_recentlyViewedTitleText"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/actionList_recentBarIconR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/actionQueue_recentlyViewedTitleText"
            android:gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/actionList_recentlyViewedLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/actionQueue_recentlyViewedBackground"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Choose to Add Time"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/actionQueue_recentlyViewedTitleText"
            android:background="@color/actionQueue_recentlyViewedTitleBackground"
            android:padding="8dp"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/actionList_recentLayout0"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:id="@+id/actionList_recentWorkOrderNum0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19463-001"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/actionList_recentDescription0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="QFS138 - CAMPUS WIDE - IRRIGATION MANUAL WATERING - ANNUAL RECURRING"
                android:textSize="14dp"
                android:lines="2"
                android:paddingRight="4dp"
                android:textColor="@color/actionQueue_recentlyViewedText"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionList_recentLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:id="@+id/actionList_recentWorkOrderNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19463-001"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/actionList_recentDescription1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="QFS138 - CAMPUS WIDE - IRRIGATION MANUAL WATERING - ANNUAL RECURRING"
                android:textSize="14dp"
                android:lines="2"
                android:paddingRight="4dp"
                android:textColor="@color/actionQueue_recentlyViewedText"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/actionList_recentLayout2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:id="@+id/actionList_recentWorkOrderNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19463-001"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/actionList_recentDescription2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="QFS138 - CAMPUS WIDE - IRRIGATION MANUAL WATERING - ANNUAL RECURRING"
                android:textSize="14dp"
                android:lines="2"
                android:paddingRight="4dp"
                android:textColor="@color/actionQueue_recentlyViewedText"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionList_recentLayout3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:id="@+id/actionList_recentWorkOrderNum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19463-001"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/actionList_recentDescription3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="QFS138 - CAMPUS WIDE - IRRIGATION MANUAL WATERING - ANNUAL RECURRING"
                android:textSize="14dp"
                android:lines="2"
                android:paddingRight="4dp"
                android:textColor="@color/actionQueue_recentlyViewedText"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionList_recentLayout4"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <TextView
                android:id="@+id/actionList_recentWorkOrderNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19463-001"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"/>

            <TextView
                android:id="@+id/actionList_recentDescription4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="QFS138 - CAMPUS WIDE - IRRIGATION MANUAL WATERING - ANNUAL RECURRING"
                android:textSize="14dp"
                android:lines="2"
                android:paddingRight="4dp"
                android:textColor="@color/actionQueue_recentlyViewedText"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>