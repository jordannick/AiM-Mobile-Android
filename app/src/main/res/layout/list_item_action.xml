<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/soothing_background">



    <TextView
        android:id="@+id/action_work_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORK ORDER ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#555555"
        android:textSize="16sp"
        android:padding="6dp"
        />


    <TextView
        android:id="@+id/action_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="#555555"
        android:text="ACTION TAKEN"
        android:padding="6dp"
      />

    <TextView
        android:id="@+id/action_work_order_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATION"
        android:layout_toRightOf="@+id/action_work_order_id"
        android:textColor="#555555"
        android:textSize="16sp"
        android:padding="6dp"
        />

    <TextView
        android:id="@+id/action_newStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#555555"
        android:text="STATUS"
        android:layout_toRightOf="@+id/action_taken"
        android:layout_alignParentBottom="true"
        android:padding="6dp"
    />

    <TextView
        android:id="@+id/action_timeSince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:text="TIMESTAMP"
        android:layout_below="@+id/action_work_order_id"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/hours_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:text="HOURS:"
        android:layout_alignParentRight="true"
        android:padding="6dp"/>
    <TextView
        android:id="@+id/action_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:text="0"
        android:layout_below="@+id/hours_text"
        android:layout_alignParentRight="true"
        android:padding="6dp"/>


</RelativeLayout>

