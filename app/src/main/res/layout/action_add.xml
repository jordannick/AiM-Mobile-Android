<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/add_action_section">

        <View
            android:id="@+id/info_strut"
            android:background="#000000"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/workOrderIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/info_strut"
            android:layout_alignParentLeft="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/workOrderLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campus Wide Projects"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/info_strut"
            android:layout_alignParentRight="true"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@drawable/add_action_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textSize="20sp"
            android:paddingLeft="24dp"
            android:layout_centerVertical="true"
            android:textColor="@color/action_add_grey_text"/>
        <Spinner
            android:id="@+id/spinner_actionTaken"
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:entries="@array/actionTakenItems"
            android:spinnerMode="dialog"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="24dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@drawable/add_action_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            android:textSize="20sp"
            android:paddingLeft="24dp"
            android:layout_centerVertical="true"
            android:textColor="@color/action_add_grey_text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/button_clearHours"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Hours"
            android:id="@+id/button_setHours"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/button_clearHours"/>
        <TextView
            android:id="@+id/hoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="-"
            android:textSize="24sp"
            android:layout_toLeftOf="@id/button_setHours"
            android:padding="12dp"
            android:layout_marginRight="12dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:background="@drawable/add_action_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="20sp"
            android:paddingLeft="24dp"
            android:layout_centerVertical="true"
            android:textColor="@color/action_add_grey_text"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <CheckBox
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Status"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:id="@+id/checkBox_updateStatus"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:layout_weight="1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_updateStatus"
                android:entries="@array/statusItems"
                android:spinnerMode="dialog"
                android:clickable="false"/>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@drawable/add_action_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textSize="20sp"
            android:paddingLeft="24dp"
            android:layout_centerVertical="true"
            android:textColor="@color/action_add_grey_text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Note"
            android:id="@+id/button_addNote"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/notesListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/notesListViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Notes Added"
        android:textSize="20sp"
        android:textColor="@color/action_add_grey_text"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>