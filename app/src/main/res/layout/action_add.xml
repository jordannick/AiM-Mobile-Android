<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardView_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="8dp"
            android:text="NEW ACTION"
            android:textStyle="bold"
            android:textColor="@color/add_green"
            android:textSize="18sp"
            />

        <!-- android:textColor="@android:color/tertiary_text_light"

         android:background="@color/details_overview_divider"
         -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/add_green"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">
                <LinearLayout
                    android:id="@+id/action_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/action_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ACTION"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/tertiary_text_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <Spinner
                        android:id="@+id/spinner_actionTaken"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:entries="@array/actionTakenItems"
                        android:spinnerMode="dialog"
                        android:layout_weight="3"
                        />


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="HOURS"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/tertiary_text_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/hoursText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="24sp"
                            android:padding="12dp"
                            android:layout_marginRight="12dp"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENTER"
                            android:id="@+id/button_setHours"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/button_clearHours"
                            style="?android:attr/borderlessButtonStyle"
                            android:textColor="@android:color/holo_blue_dark"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CLEAR"
                            android:id="@+id/button_clearHours"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            style="?android:attr/borderlessButtonStyle"
                            android:textColor="@android:color/holo_blue_dark"

                            />

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/tertiary_text_light"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinner_updateStatus"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:entries="@array/statusItems"
                        android:spinnerMode="dialog"
                        android:layout_weight="3"/>



                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="NOTES"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/tertiary_text_light"
                        android:paddingLeft="24dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/notes_existing_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 existing"
                            android:layout_centerVertical="true"
                            android:paddingLeft="8dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIEW"
                            android:id="@+id/button_viewNotes"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            style="?android:attr/borderlessButtonStyle"
                            android:textColor="@android:color/holo_blue_dark"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADD"
                            android:id="@+id/button_addNote"
                            android:layout_toLeftOf="@id/button_viewNotes"
                            style="?android:attr/borderlessButtonStyle"
                            android:textColor="@android:color/holo_blue_dark"/>

                        <TextView
                            android:id="@+id/notes_added_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 added"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/button_addNote"
                            android:paddingRight="8dp"
                            android:textColor="@color/add_green"
                            android:visibility="invisible"/>

                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="8dp"
            android:text="WORK ORDER"
            android:textColor="@color/details_overview_divider"
            android:textSize="18sp"/>

        <!-- android:textColor="@android:color/tertiary_text_light"

         android:background="@color/details_overview_divider"
         -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/details_overview_divider"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/workOrderLocationText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16sp"
                        android:lines="2"
                        android:text="Kerr Administration"
                        android:textColor="@android:color/secondary_text_light"
                        android:gravity="center"
                        />

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/workOrderIdText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16sp"
                        android:text="123456-001"
                        android:gravity="center"
                        android:singleLine="true"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/workOrderDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/primary_text_light"
                    android:text="QCP300 QF13 LANDSCAPE - SHOPS SUPPORT - CAMPUS WAY BETWEEN 30TH AND 35TH STREETS SIDEWALK LIGHT POLE INSTALLATION"
                    android:paddingRight="8dp"
                    android:textSize="20sp"
                    android:padding="12dp"
                    />



            </android.support.v7.widget.CardView>

        </LinearLayout>



    <!--
        <ListView
            android:id="@+id/notesListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/notesListViewEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Notes Added"
            android:textSize="20sp"
            android:textColor="@color/no_notes_text"
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
            -->

    </LinearLayout>
</ScrollView>
