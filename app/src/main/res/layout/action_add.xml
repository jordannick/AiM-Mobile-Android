<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardView_layoutBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="NEW ACTION FORM"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/sectionTitle"
            android:textSize="24sp"
            />

        <!-- android:textColor="@android:color/tertiary_text_light"

         android:background="@color/details_overview_divider"
         -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:background="@color/sectionTitle_underline"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true"
                android:background="@null">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/cardView_cardBackground">

                    <TextView
                        android:id="@+id/action_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTION"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/addAction_sectionTitles"
                        android:layout_weight="1"
                        android:paddingTop="12dp"
                        android:paddingLeft="12dp"/>


                <RelativeLayout
                    android:id="@+id/action_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/alert_action_required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alert_red"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingLeft="8dp"
                        android:paddingStart="8dp"
                        android:visibility="invisible"/>

                    <Spinner
                        android:id="@+id/spinner_actionTaken"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:minHeight="50dp"
                        android:entries="@array/actionTakenItems"
                        android:spinnerMode="dropdown"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="24dp"

                        android:prompt="@string/add_action_spinner_action_prompt"
                        />


                </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="@color/cardView_cardBackground">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/addAction_sectionTitles"
                            android:paddingTop="12dp"
                            android:paddingLeft="12dp"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_updateStatus"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:minHeight="50dp"
                            android:entries="@array/statusItems"
                            android:spinnerMode="dropdown"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:layout_marginLeft="48dp"
                            android:layout_marginRight="24dp"
                            android:prompt="@string/add_action_spinner_status_prompt"/>

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:background="@color/cardView_cardBackground">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NOTES"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/addAction_sectionTitles"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="left"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"
                                >
                                <TextView
                                    android:id="@+id/notes_existing_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 existing"
                                    android:textSize="18sp"
                                    android:layout_centerVertical="true"
                                    android:paddingBottom="8dp"/>
                                <TextView
                                    android:id="@+id/notes_added_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 added"
                                    android:textSize="18sp"
                                    android:textColor="@color/sectionTitle"
                                    android:visibility="visible"/>
                            </LinearLayout>



                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:padding="4dp">

                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="VIEW"
                                android:padding="14dp"
                                android:textSize="20sp"
                                android:id="@+id/button_viewNotes"
                                style="?android:attr/borderlessButtonStyle"
                                android:textColor="@android:color/holo_blue_dark"
                                />

                            <Button
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:padding="14dp"
                                android:text="ADD"
                                android:textSize="20sp"
                                android:id="@+id/button_addNote"
                                style="?android:attr/borderlessButtonStyle"
                                android:textColor="@android:color/holo_blue_dark"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="true">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:background="@color/cardView_cardBackground">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/cardView_cardBackground"
                            android:paddingTop="8dp"
                            android:paddingLeft="8dp">

                            <TextView
                                android:id="@+id/actionAdd_textView_Hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HOURS"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/addAction_sectionTitles"/>


                            <ImageButton
                                android:id="@+id/actionAdd_button_clearHours"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:src="@drawable/icon_x_gray"
                                android:background="@null"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignBottom="@id/actionAdd_textView_Hours"
                                android:layout_marginRight="8dp"
                                android:visibility="gone"/>

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="4dp">
                            <Button
                                android:id="@+id/hoursTextView"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textSize="16dp"
                                android:layout_margin="16dp"
                                android:text="Press\nTo\nRecord"
                                android:background="@drawable/selector_add_action_hours"
                                android:textColor="@android:color/holo_blue_dark"
                                />
<!--                            <Button
                                android:text="CLEAR"
                                android:id="@+id/button_clearHours"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:textSize="20sp"
                                style="?android:attr/borderlessButtonStyle"
                                android:textColor="@android:color/holo_blue_dark"/>
                            <Button
                                android:text="ENTER"
                                android:id="@+id/button_setHours"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"
                                android:textSize="20sp"
                                style="?android:attr/borderlessButtonStyle"
                                android:textColor="@android:color/holo_blue_dark"
                                />-->
                        </LinearLayout>
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="WORK ORDER DETAILS"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="20sp"/>
<!--android:textColor="@color/details_overview_divider"-->

        <View
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:background="#B39E9E9E"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/workOrderLocationText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16sp"
                        android:lines="2"
                        android:text="Kerr Administration"
                        android:textColor="@android:color/secondary_text_light"
                        android:gravity="center"
                        android:background="@color/cardView_cardBackground"
                        />

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardPreventCornerOverlap="true">

                    <TextView
                        android:id="@+id/workOrderIdText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="16sp"
                        android:text="123456-001"
                        android:gravity="center"
                        android:singleLine="true"
                        android:background="@color/cardView_cardBackground"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/workOrderDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardView_cardBackground"
                    android:text="QCP300 QF13 LANDSCAPE - SHOPS SUPPORT - CAMPUS WAY BETWEEN 30TH AND 35TH STREETS SIDEWALK LIGHT POLE INSTALLATION"
                    android:paddingRight="8dp"
                    android:textSize="20sp"
                    android:padding="12dp"
                    />



            </android.support.v7.widget.CardView>

        </LinearLayout>



    <!--
        <ListView
            android:id="@+id/notesListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/notesListViewEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Notes Added"
            android:textSize="20sp"
            android:textColor="@color/no_notes_text"
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
            -->

    </LinearLayout>
</ScrollView>
