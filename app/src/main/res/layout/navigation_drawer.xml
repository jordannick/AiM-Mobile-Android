<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_drawer_recycler"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/navigationDrawerBackground"
        android:scrollbars="none" />


    <LinearLayout
        android:id="@+id/nav_footer_logout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_nav_item"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingStart="28dp"
        android:paddingTop="12dp"
        android:onClick="">

        <TextView
            android:id="@+id/nav_footer_logout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="ICON"
            android:textColor="@color/Material_font_grey"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/nav_footer_logout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/Material_font_black"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_footer_settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_nav_item"
        android:layout_above="@id/nav_footer_logout_layout"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingStart="28dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/nav_footer_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="ICON"
            android:textColor="@color/Material_font_grey"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/nav_footer_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/Material_font_black"
            android:textSize="18dp" />
    </LinearLayout>

    <View
        android:id="@+id/nav_footer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/nav_footer_settings_layout"
        android:background="@color/Material_icon_grey" />

    <LinearLayout
        android:id="@+id/nav_footer_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_footer_divider"
        android:background="@drawable/selector_nav_item"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingStart="28dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/nav_footer_refresh_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:text="ICON"
            android:textColor="@color/Material_font_grey"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/nav_footer_refresh_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/Material_font_black"
            android:textSize="18dp" />
    </LinearLayout>
