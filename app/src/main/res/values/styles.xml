<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="credentialLayoutTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <!--<item name="android:textColor">@color/details_text_title</item>-->
    </style>


    <style name="actionQueue_recentTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionQueue_recentlyViewedText</item>
    </style>


    <style name="actionQueue_recentDescription">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/actionQueue_recentlyViewedText</item>
    </style>

</resources>
