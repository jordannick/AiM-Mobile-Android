<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="credentialLayoutTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <!--<item name="android:textColor">@color/details_text_title</item>-->
    </style>


    <style name="actionQueue_recentTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionQueue_recentlyViewedText</item>
    </style>


    <style name="actionQueue_recentDescription">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/actionQueue_recentlyViewedText</item>
    </style>


    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@color/cardView_cardBackground</item>
    </style>


    <style name="ChartDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/ChartDialogAnimation</item>
    </style>

    <style name="ChartDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="searchView_removeHighlight" parent="android:Widget.EditText">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">#ffffff</item>

    </style>


